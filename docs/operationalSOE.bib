	journal = {Ecological Indicators},
	author = {Heim, Kurt C. and Thorne, Lesley H. and Warren, Joseph D. and Link, Jason S. and Nye, Janet A.},
	month = jun,
	year = {2021},
	keywords = {Marine ecosystems, Dynamic Ocean management, Ecosystem based management, Ecosystem indicators, Problem of scale, Spatial scale},
	pages = {107522},
