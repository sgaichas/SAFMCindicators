	keywords = {fisheries management, ecosystem approach, fishing effects, indicators, power analysis},
	pages = {212--232},
	file = {Full Text PDF:/Users/sarahgaichas/Zotero/storage/LFQD7W8U/Jennings - 2005 - Indicators to support an ecosystem approach to fis.pdf:application/pdf;Snapshot:/Users/sarahgaichas/Zotero/storage/LPXNZ6FV/j.1467-2979.2005.00189.html:text/html;Submitted Version:/Users/sarahgaichas/Zotero/storage/3Q4V66G4/Jennings - 2005 - Indicators to support an ecosystem approach to fis.pdf:application/pdf},
}

@article{nash_ecological_2016,
	title = {Ecological indicators for coral reef fisheries management},
	volume = {17},
