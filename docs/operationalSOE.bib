	author = {Holsman, Kirstin and Samhouri, Jameal and Cook, Geoffrey and Hazen, Elliott and Olsen, Erik and Dillard, Maria and Kasperski, Stephen and Gaichas, Sarah and Kelble, Christopher R. and Fogarty, Mike and Andrews, Kelly},
	month = jan,
	year = {2017},
	keywords = {ecosystem-based management, coupled natural–human systems, ecosystem risk assessment, risk assessment, socio-ecological system},
	pages = {e01256},
	file = {Full Text PDF:/Users/sarahgaichas/Zotero/storage/9YP5SJH6/Holsman et al. - 2017 - An ecosystem-based approach to marine risk assessm.pdf:application/pdf;Snapshot:/Users/sarahgaichas/Zotero/storage/TRHB7NWQ/ehs2.html:text/html},
}

